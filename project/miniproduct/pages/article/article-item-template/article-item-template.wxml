<template name="articleItem">
  <view class='article-item'>
        <view class='article-head'>
          <image class='article-head-avator' src='{{avator}}'></image>
          <text class='article-head-date'>{{date}}</text>
        </view>
        <text class='article-title'>{{title}}</text>
        <image class='article-img' src='{{img}}'></image>
        <text class='article-desc'>{{desc}}</text>
        <view class='article-footer'>
          <image class='article-footer-icon' src='../../images/avator/1.jpg'></image>
          <text class='article-footer-text'>{{star}}</text>
          <image class='article-footer-icon' src='../../images/avator/2.jpg'></image>
          <text class='article-footer-text'>{{view}}</text>        
        </view>
      </view>
</template>